                <th scope="col">Ultima atualização</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.id_lampada</th>
                <td>@Model.nome_lampada</td>
                <td>@Model.Status</td>
                <td>@Model.DataUltimaAtualizacao</td>
            </tr>
            <tr>
                <th scope="row">@Model.id_lampada</th>
                <td>@Model.nome_lampada</td>
